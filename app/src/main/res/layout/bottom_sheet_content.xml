<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/colorPrimary"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/bottom_sheet_pic"
            android:background="@color/transparent"
            android:onClick="getDirectionsTo"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_directions" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="91dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bottom_sheet_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Antenna ID"
                android:textColor="@android:color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/bottom_sheet_ext_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Antenna extID"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bottom_sheet_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Address"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/bottom_sheet_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@color/common_google_signin_btn_text_dark_disabled" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/border_bottom">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

        <ImageButton
            android:id="@+id/obj1_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@color/transparent"
            android:onClick="startObjectActivity"
            android:scaleType="fitCenter"
            android:src="@drawable/dummy2"
            android:tag="@string/Object1" />


        <ImageButton
            android:id="@+id/obj2_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/obj1_pic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="16dp"
            android:background="@color/transparent"
            android:onClick="startObjectActivity"
            android:scaleType="fitCenter"
            android:src="@drawable/dummy2"
            android:tag="@string/Object2" />

        <ImageButton
            android:id="@+id/obj3_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/obj2_pic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="16dp"
            android:background="@color/transparent"
            android:onClick="startObjectActivity"
            android:scaleType="fitCenter"
            android:src="@drawable/dummy2"
            android:tag="@string/Object3" />

        <LinearLayout
            android:layout_width="332dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/obj1_pic"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_obj1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/Object1" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Module operating correctly"
                    android:textColor="@color/design_default_color_secondary_variant" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_obj"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/Object2" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Module operating correctly"
                    android:textColor="@color/design_default_color_secondary_variant" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_obj3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/Object3" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Module operating correctly"
                    android:textColor="@color/design_default_color_secondary_variant" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btnTicket"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startObjectActivity"
        android:text="Create Ticket" />

    <ImageView
        android:id="@+id/cam_pic"
        android:layout_width="350dp"
        android:layout_height="350dp"

        android:layout_margin="16dp"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Your remaining content here"
            android:textColor="@android:color/white" />

    </FrameLayout>
</LinearLayout>